#!/usr/bin/env perl6
use v6;
use Sustenance;
use Sustenance::Parser::ParseTree;

multi sub MAIN(Str:D $file, Str:D :date($d)! where .so --> Nil)
{
    my Sustenance $sustenance .= new(:$file);
    my Date $date .= new($d);
    say($sustenance.gen-macros($date));
}

multi sub MAIN(Str:D $file --> Nil)
{
    my Sustenance $sustenance .= new(:$file);
    say($sustenance.gen-macros);
}

sub USAGE(--> Nil)
{
    constant $HELP = q:to/EOF/.trim;
    Usage:
      sustenance [--date=<date>] <file>
    EOF
    say($HELP);
}

# vim: set filetype=perl6 foldmethod=marker foldlevel=0:
